@page "/configurations"
@inject ConfigurationService ConfigService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Configurations - TestRunner</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="fas fa-cog text-primary"></i> Configurations</h1>
        <p class="text-muted">Manage your test configurations</p>
    </div>
    <div>
        <button class="btn btn-primary" @onclick="ShowCreateModal">
            <i class="fas fa-plus"></i> New Configuration
        </button>
    </div>
</div>

@if (loading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading configurations...</p>
    </div>
}
else if (!configurations.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h3>No Configurations Found</h3>
            <p class="text-muted">Create your first configuration to get started</p>
            <button class="btn btn-primary" @onclick="ShowCreateModal">
                <i class="fas fa-plus"></i> Create Configuration
            </button>
        </div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var config in configurations)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 config-card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="fas fa-file-alt"></i> @config.Name
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Total Projects:</span>
                                <strong>@config.ProjectCount</strong>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Enabled:</span>
                                <strong>@config.EnabledProjects</strong>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Last Modified:</span>
                                <small>@config.LastModified.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>

                        @if (config.Config != null)
                        {
                            <div class="mb-2">
                                @if (config.Config.ParallelExecution)
                                {
                                    <span class="badge bg-info me-1">
                                        <i class="fas fa-stream"></i> Parallel
                                    </span>
                                }
                                @if (config.Config.StopOnFirstFailure)
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-stop"></i> Stop on Fail
                                    </span>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => RunConfig(config.Name)"
                                    disabled="@ExecutionService.IsRunning">
                                <i class="fas fa-play"></i> Run
                            </button>
                            <button class="btn btn-sm btn-outline-secondary" @onclick="() => ViewConfig(config.Name)">
                                <i class="fas fa-eye"></i> View
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => ConfirmDelete(config.Name)">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Create Configuration Modal -->
@if (showCreateModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create New Configuration</h5>
                    <button type="button" class="btn-close" @onclick="() => showCreateModal = false"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Configuration Name</label>
                        <input type="text" class="form-control" @bind="newConfigName" placeholder="my-project" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Project Path</label>
                        <input type="text" class="form-control" @bind="newConfigPath" placeholder="/path/to/projects" />
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" @bind="autoDetect" id="autoDetectCheck" />
                        <label class="form-check-label" for="autoDetectCheck">
                            Auto-detect projects in path
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="() => showCreateModal = false">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="CreateConfiguration" disabled="@(string.IsNullOrWhiteSpace(newConfigName))">
                        <i class="fas fa-save"></i> Create
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] private TestExecutionService ExecutionService { get; set; } = default!;

    private List<ConfigInfo> configurations = new();
    private bool loading = true;
    private bool showCreateModal = false;
    private string newConfigName = "";
    private string newConfigPath = ".";
    private bool autoDetect = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadConfigurationsAsync();
    }

    private async Task LoadConfigurationsAsync()
    {
        loading = true;
        try
        {
            configurations = await ConfigService.GetAllConfigurationsAsync();
        }
        finally
        {
            loading = false;
        }
    }

    private void ShowCreateModal()
    {
        showCreateModal = true;
        newConfigName = "";
        newConfigPath = ".";
        autoDetect = true;
    }

    private async Task CreateConfiguration()
    {
        try
        {
            if (autoDetect)
            {
                await ConfigService.CreateAutoConfigurationAsync(newConfigName, newConfigPath);
            }
            else
            {
                var config = new TestRunnerConfig
                {
                    Name = newConfigName,
                    Projects = new List<ProjectConfig>()
                };
                await ConfigService.SaveConfigurationAsync(newConfigName, config);
            }

            showCreateModal = false;
            await LoadConfigurationsAsync();
            await JS.InvokeVoidAsync("alert", "Configuration created successfully!");
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Error creating configuration: {ex.Message}");
        }
    }

    private void RunConfig(string name)
    {
        Navigation.NavigateTo($"/run?config={name}");
    }

    private void ViewConfig(string name)
    {
        Navigation.NavigateTo($"/configurations/{name}");
    }

    private async Task ConfirmDelete(string name)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete configuration '{name}'?");
        if (confirmed)
        {
            await ConfigService.DeleteConfigurationAsync(name);
            await LoadConfigurationsAsync();
        }
    }
}

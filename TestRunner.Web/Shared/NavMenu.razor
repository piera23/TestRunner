<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="fas fa-vial"></i> TestRunner
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" id="navMenu" class="nav-toggle" @bind="collapseNavMenu" />

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="nav-icon"><i class="fas fa-tachometer-alt"></i></span>
                <span class="nav-text">Dashboard</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="configurations">
                <span class="nav-icon"><i class="fas fa-cog"></i></span>
                <span class="nav-text">Configurations</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="run">
                <span class="nav-icon"><i class="fas fa-play-circle"></i></span>
                <span class="nav-text">Run Tests</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="projects">
                <span class="nav-icon"><i class="fas fa-folder-open"></i></span>
                <span class="nav-text">Projects</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="history">
                <span class="nav-icon"><i class="fas fa-history"></i></span>
                <span class="nav-text">History</span>
            </NavLink>
        </div>

        <hr class="my-3" />

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="https://github.com/piera23/TestRunner" target="_blank">
                <span class="nav-icon"><i class="fab fa-github"></i></span>
                <span class="nav-text">GitHub</span>
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/docs" target="_blank">
                <span class="nav-icon"><i class="fas fa-book"></i></span>
                <span class="nav-text">Documentation</span>
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
